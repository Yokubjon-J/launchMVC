@model MyViewModel;

<h1>Create</h1>
<hr/>
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Create a new model</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Test" asp-action="CreateModel" method="post">
                    <div class="mb-3">
                        <label class="form-label">Model Name</label>
                        <input asp-for=Name type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Model Age</label>
                        <input asp-for=Age type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary">Saqla</button>
                    </div>
                </form>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>